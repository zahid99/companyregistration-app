
@{
    ViewBag.Title = "ProductList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>
<script src="~/Scripts/angular.js"></script>
@*<script src="~/js/Product.js"></script>*@

<h1>ProductList</h1>
<div ng-app="myApp">
    <div ng-controller="myCntrl">
        <div class="form-horizontal" role="form">
            <div class="container">
                <div class="row">
                    <div class="col-sm-6>
                        <div class="form-group">
                            <label class="control-label">ReferenceNo</label>
                            <input type="text" class="form-control" ng-model="PNO" />
                        </div><br />
                        <div class="form-group">
                            <label class="control-label">Product Name</label>
                            <input type="text" class="form-control" ng-model="PName" />
                        </div>
                        <div class="form-group">
                            <label class="control-label">Price</label>
                            <input type="text" class="form-control" ng-model="Price" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="form-group">
                                <input type="submit" class="form-control" ng-click="InsertProduct" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div ng-init="GetAllProducts()">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">First</th>
                            <th scope="col">Last</th>
                            <th scope="col">Handle</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr ng-repeat="pd in products">
                            <th>{{pd.Id}}</th>
                            <td>{{pd.Name}}</td>
                            <td>{{pd.Price}}</td>
                            <td></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

    </div>
</div>
<script>
    var app = angular.module("myApp", []);
    app.controller("myCntrl", function ($scope, $http) {
        debugger;
        $scope.GetAllProducts = function () {
            debugger;
            $http({
                method: "get",
                url: "../Home/GetAllProducts"
            }).then(function (response) {
                debugger;
                $scope.products = response.data;
            }, function () {
                alert("Error");
            })
        };
    });
</script>


